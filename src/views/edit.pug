extends base.pug

block content
    h4 Change Title of video
    //- form's method is basically GET. POST changes database, but GET doesn't.
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required)
        input(placeholder="Description", required, type="text", name="description", minlength=1, value=video.description)
        input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save",type="submit")
